{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@ayu-plus/compat": ["packages/ayu-plus-compat/src"],
      "@ayu-plus/*": ["packages/*/src"],
      "ayu-plus": ["packages/ayu-plus/src"]
    }
  },
  "include": [
    "packages"
  ]
}
